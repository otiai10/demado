{
  "manifest_version": 2,
  "name": "demado for all",
  "version": "0.1.0",
  "description": "なんかwebゲームとか動画とかを画面ぴったりで別窓で開きたいChrome拡張です",
  "permissions" : [
    "tabs",
    "activeTab"
  ],
  "icons" : {
    "48"  : "src/img/icon.48.png",
    "128" : "src/img/icon.128.png"
  },
  "browser_action": {
    "default_icon": "src/img/icon.19.png",
    "default_popup":"src/html/popup.html"
  },
  "background": {
    "scripts": [
      "src/js/repository.js",
      "src/js/background/handlers.js",
      "src/js/background/window-manager.js",
      "src/js/background/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "src/css/client.css"
      ],
      "js": [
        "src/js/client/client.js"
      ]
    }
  ],
  "commands": {
    "capture": {
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      },
      "description":"出窓のスクショ撮ります. Priscのインストールが必要です."
    }
  },
  "options_page" : "src/html/settings.html"
}
